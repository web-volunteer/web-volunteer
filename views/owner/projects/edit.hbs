<h2>Edit your project</h2>

{{#with project}}
<form class="flex-form" action="/{{_id}}/projects" method="POST">

    <div class="flex-form-fields">

        <div class="form-field">
            <label for="title">Title of your project: </label>
            <input type="text" name="title" id="title" placeholder="Choose a title" value="{{title}}">
        </div>

        <div class="form-field">

            <label for="description">Description: </label>
            <textarea name="description" id="description" rows="4" cols="40"
                placeholder="Please describe what you need for your project as detailed as possible.">{{description}}</textarea>
        </div>

        <div class="form-field">

            <label for="status">Current status of your project: </label>
            <select name="status" id="status">
                <option value="open">open</option>
                <option value="running">running</option>
                <option value="closed">closed</option>
            </select>
        </div>

        <div class="form-field">

            <label for="time">How much time do you need help for? </label>
            <select name="time" id="time">
                <option value="1">Less than 5 hours/week.</option>
                <option value="2">5 to 10 hours/week.</option>
                <option value="3">More than 10 hours/week.</option>
            </select>
        </div>

    </div>

</form>
<div class="flex-container btn-container">

    <button class="btn" type="submit">Edit</button>
    <a class="btn" href="/owner/projects/delete">Delete this project</a>

    <p><a class="btn back-btn" href="/{{this.owner._id}}/projects-owner">Back to all projects</a></p>
</div>

{{/with}}